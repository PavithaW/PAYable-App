<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:context="com.example.zohoweb.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.18"
            android:background="#38A9DE"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Request Free Card Reader"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_nav"
                android:onClick="onNavBack" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1.82"
            android:background="@android:color/white" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white" >

                        <TextView
                            android:id="@+id/txtEnglish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="English"
                            android:textColor="@color/notregistered_signup_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtSinhala"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txtEnglish"                         
                            android:layout_toLeftOf="@+id/txtEnglish"
                            android:text="Sinhala"
                            android:textColor="@color/notregistered_signup_color"
                            android:layout_marginRight="35dp"
                            android:textSize="14sp" />
                        
                          <TextView
                            android:id="@+id/txtTamil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txtEnglish"                         
                            android:layout_toRightOf="@+id/txtEnglish"
                            android:text="Tamil"
                            android:textColor="@color/notregistered_signup_color"
                            android:layout_marginLeft="35dp"
                            android:textSize="14sp" />
                        
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edtFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/white"
                        android:drawableLeft="@drawable/firstname_icon"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:maxLength="100"
                        android:hint="First Name *"
                        android:digits="qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM "
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/txtfields_color"
                        android:textSize="14sp" >
                    </EditText>

                    <RelativeLayout
                        android:id="@+id/rlFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#E5E5E5" >
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edtLasttName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:background="@android:color/white"
                        android:drawableLeft="@drawable/lastname_icon"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:digits="qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM "
                        android:maxLength="100"
                        android:hint="Last Name *"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/txtfields_color"
                        android:textSize="14sp" >
                    </EditText>

                    <RelativeLayout
                        android:id="@+id/rlLastName"
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#E5E5E5" >
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edtMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:background="@android:color/white"
                        android:drawableLeft="@drawable/mobile_icon"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:hint="Mobile No *"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/txtfields_color"
                        android:textSize="14sp" >
                    </EditText>

                    <RelativeLayout
                        android:id="@+id/rlMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#E5E5E5" >
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edtEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:background="@android:color/white"
                        android:drawableLeft="@drawable/email_icon"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:maxLength="100"
                        android:hint="Email *"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/txtfields_color"
                        android:textSize="14sp" >
                    </EditText>

                    <RelativeLayout
                        android:id="@+id/rlEmail"
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#E5E5E5" >
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlBusinessType"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/spnbg"
                        android:ems="10" >

                        <TextView
                            android:id="@+id/txtSelectCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Select Business Category"
                            android:textColor="@color/signin_btn"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/down_arrow" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edtCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:background="@android:color/white"
                        android:drawableLeft="@drawable/company_icon"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:hint="Company"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/txtfields_color"
                        android:textSize="14sp"
                        android:visibility="gone" >
                    </EditText>

                    <RelativeLayout
                        android:id="@+id/rlCompany"
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#E5E5E5"
                        android:visibility="gone" >
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edtBusinessDes"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:background="@android:color/white"
                        android:drawableLeft="@drawable/business_des_icon"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/business_des_icon"
                        android:ems="10"
                        android:hint="Enter Business Description"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLines="5"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/txtfields_color"
                        android:textSize="14sp" >
                    </EditText>

                    <RelativeLayout
                        android:id="@+id/rlBusinessDes"
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#E5E5E5" >
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/sign_in_btn_selector"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>