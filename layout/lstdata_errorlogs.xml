<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="10dp"
         >

        <RelativeLayout
            android:id="@+id/rlCenter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txtId"
            android:background="#e5e5e5" >
        </RelativeLayout>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtClassname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="13th March 2016"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtClassname"
            android:layout_below="@+id/rlCenter"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:text="This is due to Null pointer Exception,ugqsaydvvduvsuvugvdugvgusvuvd iyasgdhyusavudvi hyasyduvsvdugvh"
            android:textColor="#FF3535"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtClassname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rlCenter"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rlVertical"
            android:text="MainActivity"
            android:textColor="#666666"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>