<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/settings_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >

        <RelativeLayout
            android:id="@+id/rlVertical"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txtId"
            android:background="#e5e5e5" >
        </RelativeLayout>

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtClassname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rlCenter"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rlVertical"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="MainActivity"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtClassname"
            android:layout_below="@+id/txtDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="This is due to Null pointer Exception,ugqsaydvvduvsuvugvdugvgusvuvd iyasgdhyusavudvi hyasyduvsvdugvh"
            android:textColor="#FF3535"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtClassname"
            android:layout_below="@+id/txtClassname"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="13th March 2016"
            android:textColor="#666666"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5" >
    </RelativeLayout>

</LinearLayout>