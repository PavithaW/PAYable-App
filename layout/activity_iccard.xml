<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"
    android:background="#80FF00">
    
    <TextView android:id="@+id/TextView01"
	    android:layout_width="80dip" android:layout_height="40dip"
	    android:layout_marginBottom="0dip" android:layout_marginTop="10dip"
	    android:layout_marginLeft="5dip" android:layout_marginRight="0dip"
	    android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
	    android:gravity="center_vertical" android:textColor="#000000"
	    android:text="Card number:" android:textSize="16sp" />
   	
    <EditText android:id="@+id/cardno"
	    android:layout_width="fill_parent" android:layout_height="40dip"
	   	android:layout_marginBottom="0dip" android:layout_marginTop="10dip"
	    android:layout_marginLeft="0dip" android:layout_marginRight="5dip"
	    android:layout_alignParentTop="true" android:layout_toRightOf="@+id/TextView01"
	    android:gravity="center_vertical"
	    android:hint="" android:textSize="16sp" android:maxLength="20"
	    android:singleLine="true" android:inputType="none" android:focusable="false"
	    android:saveEnabled="true" />
    
    <TextView android:id="@+id/TextView02"
	    android:layout_width="80dip" android:layout_height="40dip"
	    android:layout_marginBottom="0dip" android:layout_marginTop="10dip"
	    android:layout_marginLeft="5dip" android:layout_marginRight="0dip"
	    android:layout_below="@+id/TextView01" android:layout_alignParentLeft="true"
	    android:gravity="center_vertical" android:textColor="#000000"
	    android:text="Card Holder: " android:textSize="16sp" />
   	
    <EditText android:id="@+id/holder"
	    android:layout_width="fill_parent" android:layout_height="40dip"
	   	android:layout_marginBottom="0dip" android:layout_marginTop="10dip"
	    android:layout_marginLeft="0dip" android:layout_marginRight="5dip"
	    android:layout_below="@+id/TextView01" android:layout_toRightOf="@+id/TextView02"
	    android:gravity="center_vertical"
	    android:hint="" android:textSize="16sp"
	    android:singleLine="true" android:inputType="none" android:focusable="false"
	    android:saveEnabled="true" />
    
    <TextView android:id="@+id/TextView03"
	    android:layout_width="80dip" android:layout_height="40dip"
	    android:layout_marginBottom="0dip" android:layout_marginTop="10dip"
	    android:layout_marginLeft="5dip" android:layout_marginRight="0dip"
	    android:layout_below="@+id/TextView02" android:layout_alignParentLeft="true"
	    android:gravity="center_vertical" android:textColor="#000000"
	    android:text="Exp date: " android:textSize="16sp" />
   	
    <EditText android:id="@+id/expdate"
	    android:layout_width="fill_parent" android:layout_height="40dip"
	   	android:layout_marginBottom="0dip" android:layout_marginTop="10dip"
	    android:layout_marginLeft="0dip" android:layout_marginRight="5dip"
	    android:layout_below="@+id/TextView02" android:layout_toRightOf="@+id/TextView03"
	    android:gravity="center_vertical"
	    android:hint="" android:textSize="16sp" android:maxLength="4"
	    android:singleLine="true" android:inputType="none" android:focusable="false"
	    android:saveEnabled="true" />

    <TextView android:id="@+id/status"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_marginBottom="0dip" android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" android:layout_marginTop="10dip"
        android:layout_below="@+id/TextView03"
        android:singleLine="false" android:minLines="20" android:maxLines="20"
        android:text="" android:textSize="16sp" android:textColor="#000000" android:scrollbars="vertical" />

    <Button android:id="@+id/btnback"
	    android:layout_width="fill_parent" android:layout_height="45dip"
	    android:layout_marginBottom="20dip" android:layout_marginTop="0dip"
	    android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
	    android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
	    android:text="backmain" android:textSize="16sp"
	    android:background="#0101DF" />
    
</RelativeLayout>