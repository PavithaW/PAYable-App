<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settlehistorybg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/settlehistorybg"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.2"
            android:background="@drawable/splash_bg">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="February 09"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back_nav"
                android:onClick="onNavBack" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="5dp"
            android:layout_weight="1.5">

            <LinearLayout
                android:id="@+id/lnSalesVoids"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1.5">

                <RelativeLayout
                    android:id="@+id/rlSales"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_margin="5dp"
                    android:layout_weight="0.75"
                    android:background="@color/white"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"></RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"></RelativeLayout>

                    <TextView
                        android:id="@+id/txtSalesAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/relativeLayout1"
                        android:layout_alignLeft="@+id/txtSales"
                        android:layout_marginBottom="10dp"
                        android:text="Rs.63,350.50"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imgVisaCardAmount"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignLeft="@+id/txtSalesAmount"
                        android:layout_below="@+id/txtSalesAmount"
                        android:src="@drawable/visacard_icon" />

                    <TextView
                        android:id="@+id/txtVisaAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imgVisaCardAmount"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/imgVisaCardAmount"
                        android:text="Rs.43,000.00"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgMaster_Amount"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignLeft="@+id/imgVisaCardAmount"
                        android:layout_below="@+id/imgVisaCardAmount"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/mastercard_icon" />

                    <TextView
                        android:id="@+id/txtMasterAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imgMaster_Amount"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/imgMaster_Amount"
                        android:text="Rs.20,350.00"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgVisaCount"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignLeft="@+id/txtSalesCount"
                        android:layout_alignTop="@+id/imgVisaCardAmount"
                        android:src="@drawable/visacard_icon" />

                    <TextView
                        android:id="@+id/txtVisaCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imgVisaCount"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/imgVisaCount"
                        android:text="11"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgMaster_Count"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignLeft="@+id/imgVisaCount"
                        android:layout_below="@+id/imgVisaCount"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/mastercard_icon" />

                    <TextView
                        android:id="@+id/txtMasterCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imgMaster_Count"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/imgMaster_Count"
                        android:text="155"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtSales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/txtSalesAmount"
                        android:layout_alignLeft="@+id/relativeLayout1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/Sales"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txtSalesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/txtSalesAmount"
                        android:layout_alignBottom="@+id/txtSalesAmount"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/relativeLayout2"
                        android:text="14 SALES"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlVoids"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.75"
                    android:background="@color/white"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout11"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"></RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout12"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"></RelativeLayout>

                    <TextView
                        android:id="@+id/txtVoidsAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/relativeLayout11"
                        android:layout_alignLeft="@+id/txtVoids"
                        android:layout_marginBottom="10dp"
                        android:text="Rs.63,350.50"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtVoids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/txtVoidsAmount"
                        android:layout_alignLeft="@+id/relativeLayout11"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/Voids"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txtVoidsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/txtVoidsAmount"
                        android:layout_alignBottom="@+id/txtVoidsAmount"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/relativeLayout12"
                        android:text="14 VOIDS"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imgVisaCardVoidAmount"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignLeft="@+id/txtVoidsAmount"
                        android:layout_below="@+id/txtVoidsAmount"
                        android:src="@drawable/visacard_icon" />

                    <TextView
                        android:id="@+id/txtVoidVisaAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imgVisaCardVoidAmount"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/imgVisaCardVoidAmount"
                        android:text="Rs.43,000.00"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgMasterVoidAmount"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignLeft="@+id/imgVisaCardVoidAmount"
                        android:layout_below="@+id/imgVisaCardVoidAmount"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/mastercard_icon" />

                    <TextView
                        android:id="@+id/txtMasterVoidAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imgMasterVoidAmount"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/imgMasterVoidAmount"
                        android:text="Rs.20,350.00"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgVisaVoidCount"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignLeft="@+id/txtVoidsCount"
                        android:layout_alignTop="@+id/imgVisaCardVoidAmount"
                        android:src="@drawable/visacard_icon" />

                    <TextView
                        android:id="@+id/txtVisaVoidCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imgVisaVoidCount"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/imgVisaVoidCount"
                        android:text="11"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgMasterVoidCount"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignLeft="@+id/imgVisaVoidCount"
                        android:layout_below="@+id/imgVisaVoidCount"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/mastercard_icon" />

                    <TextView
                        android:id="@+id/txtMasterVoidCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imgMasterVoidCount"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/imgMasterVoidCount"
                        android:text="155"
                        android:textColor="@color/settlehistory_txtcolor"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTransactions"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/btnViewTransactions"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sign_in_btn_selector"
                android:onClick="onViewTx"
                android:text="@string/ViewTrans"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>