<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlSettlementHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/splash_bg"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Payment Options"
                android:textColor="@color/white"
                android:textSize="18sp">

                <requestFocus />
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/select_installment_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Select Installment Plan"
            android:textColor="@color/signin_btn"
            android:textSize="15sp" />

        <include
            android:id="@+id/installmentsView"
            layout="@layout/intallments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/select_currency_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Select Currency"
            android:textColor="@color/signin_btn"
            android:textSize="15sp" />

        <include
            android:id="@+id/currencyView"
            layout="@layout/currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_selectoptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/sign_in_btn_selector"
            android:text="Select"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>