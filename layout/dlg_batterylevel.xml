<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnVoid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <RelativeLayout
        android:id="@+id/rlheader"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/splash_bg" >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Battery Level"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#E5E5E5" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgReader"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:padding="20dp"
        android:src="@drawable/reader_image" />

    <TextView
        android:id="@+id/lblBatteryLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Battery Level of Card Reader"
        android:textColor="@color/signin_btn"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtBatteryLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text=" 83 %"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/sign_in_btn_selector"
        android:text="Ok"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>