<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lkrTabView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_lkr"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:onClick="onCurrencySelect"
            android:paddingTop="10dp"
            android:src="@drawable/flag_lkr" />

        <TextView
            android:id="@+id/textview_lkr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onCurrencySelect"
            android:paddingBottom="10dp"
            android:text="LKR"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_lkr"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/sign_in_btn_selector"
            android:onClick="onCurrencySelect" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/usdTabView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_usd"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:onClick="onCurrencySelect"
            android:paddingTop="10dp"
            android:src="@drawable/flag_usd" />

        <TextView
            android:id="@+id/textview_usd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:gravity="center"
            android:textStyle="bold"
            android:onClick="onCurrencySelect"
            android:paddingBottom="10dp"
            android:text="USD" />

        <View
            android:id="@+id/view_usd"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:onClick="onCurrencySelect" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gbpTabView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_gbp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:onClick="onCurrencySelect"
            android:paddingTop="10dp"
            android:src="@drawable/flag_gbp" />

        <TextView
            android:id="@+id/textview_gbp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:gravity="center"
            android:textStyle="bold"
            android:onClick="onCurrencySelect"
            android:paddingBottom="10dp"
            android:text="GBP" />

        <View
            android:id="@+id/view_gbp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:onClick="onCurrencySelect" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eurTabView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_eur"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:onClick="onCurrencySelect"
            android:paddingTop="10dp"
            android:src="@drawable/flag_eur" />

        <TextView
            android:id="@+id/textview_eur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:gravity="center"
            android:textStyle="bold"
            android:onClick="onCurrencySelect"
            android:paddingBottom="10dp"
            android:text="EUR" />

        <View
            android:id="@+id/view_eur"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:onClick="onCurrencySelect" />

    </LinearLayout>


</LinearLayout>